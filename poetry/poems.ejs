<style>
  .btn-xs {
    padding: 1px 5px;
    font-size: 15px;
  }
</style>

<ul class="list">
  <% for (const item of items) { %>
    <li <%= metadataAttrs(item) %>>
      <%= item.title %>
      <br/>
      <small class="text-muted">
        <%
          const dateObj = new Date(item.date);
          const months = ["January", "February", "March", "April", "May", "June", 
                         "July", "August", "September", "October", "November", "December"];
          const monthYear = months[dateObj.getMonth()] + " " + dateObj.getFullYear();
        %>
        <% if (item.type === 'Forthcoming') { %>
          <em><%= item.journal %></em>. Expected <%= monthYear %><% if (item.after) { %>. <em>(<%= item.after %>)</em><% } %>.
        <% } else if (item.type === 'Published') { %>
          <em><%= item.journal %></em>. <%= monthYear %><% if (item.after) { %>. <em>(<%= item.after %>)</em><% } %>.
        <% } %>
      </small>
      
      <% if (item.link) { %>
        <br/>
        <a role="button" href="<%= item.link %>" type="button" class="btn btn-outline-secondary btn-xs">
          <i class="bi bi-feather"></i> Read it here.
        </a>
      <% } %>
      
      <% if (item.note) { %>
        <br/>
        <small class="text-secondary">
          <span class="note"><%= item.note %></span>
        </small>
      <% } %>
      <hr>
    </li>
  <% } %>
</ul>
